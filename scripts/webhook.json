[
  {
    "id": "webhook-redeploy",
    "execute-command": "{{ getenv "DEPLOY_SCRIPT" | js }}",
    "command-working-directory": "{{ getenv "DEPLOY_HOME" | js }}",
    "trigger-rule":
    {
      "and":
      [
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "{{ getenv "GITHUB_WEBHOOK_SECRET" | js }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "value",
            "value": "refs/heads/master",
            "parameter":
            {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  }
]
